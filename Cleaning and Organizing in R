install.packages("here")
library("here")
install.packages("skimr")
library("skimr")
install.packages("janitor")
library("janitor")
install.packages("dplyr")
library("dplyr")
install.packages("palmerpenguins")
library("palmerpenguins")
                                            --------- scope of the analysis starts
skim_without_charts(penguins)
glimpse(penguins)
head(penguins)
                                            --------- switch to the R script
penguins %>%
  select(species)
penguins %>%
  select(-species)
penguins %>%
  rename(island_new=island)
penguins %>%                                --------- all in CAPS
  rename_with(penguins,toupper) 
  
                                            --------- organizing
install.packages("tidyverse")
library("tidyverse")

penguins %>% arrange(bill_length_mm)
View(penguins)

penguins %>% group_by(island) %>% drop_na() %>% summarise(mean_bill_lenghth_mm = mean(bill_length_mm))
penguins %>% group_by(island) %>% drop_na() %>% summarise(max_bill_lenghth_mm = max(bill_length_mm))
penguins %>% group_by(island, species) %>% drop_na() %>% summarise(max_bl = max(bill_length_mm), mean_bl = mean(bill_length_mm))
